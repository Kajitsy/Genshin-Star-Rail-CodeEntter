{
  "manifest_version": 2,
  "name": "Genshin/Star Rail CodeEntter",
  "version": "2.0.1",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "icons": {
    "1024": "/pictures/icon.png"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "storage",
    "alarms",
    "*://*.hoyoverse.com/",
    "*://*.mihoyo.com/*",
    "*://*.hoyolab.com/*"
  ],
  "browser_action": {
    "default_icon": "/pictures/icon.png",
    "default_title": "CodeEntter"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "scripts": [
      "options_background.js", 
      "genshincheck.js", 
      "hsrcheck.js"
    ]
  }
}
