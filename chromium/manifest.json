{
  "manifest_version": 3,
  "name": "Genshin/Star Rail CodeEntter",
  "version": "2.1.1",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "icons": {
    "1024": "/pictures/icon.png"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "*://*.hoyoverse.com/",
    "*://*.mihoyo.com/*",
    "*://*.hoyolab.com/*"
  ],
  "action": {
    "default_icon": "/pictures/icon.png",
    "default_title": "CodeEntter"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "service_worker": "script_imports.js"
  }
}