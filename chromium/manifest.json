{
  "manifest_version": 3,
  "name": "HoYoverse CodeEnter",
  "version": "2.2.8.1",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "icons": {
    "1024": "/pictures/icon.png"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "*://*.hoyoverse.com/",
    "*://*.mihoyo.com/*",
    "*://*.hoyolab.com/*",
    "*://*.githubusercontent.com/*"
  ],
  "action": {
    "default_icon": "/pictures/icon.png",
    "default_title": "CodeEnter",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "service_worker": "dailychecker.js"
  }
}
